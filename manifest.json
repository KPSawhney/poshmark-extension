{
  "manifest_version": 3,
  "name": "My Periodic Task Extension",
  "version": "1.0",
  "description": "Opens openai.com in a new tab every 3 hours",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "alarms",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Task Status"
  }
}
