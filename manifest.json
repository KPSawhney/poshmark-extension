{
  "manifest_version": 3,
  "name": "Poshmark Helper",
  "version": "1.0",
  "description": "A simple Chrome extension to help with Poshmark navigation.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "cookies"
  ],
  "host_permissions": [
    "https://*.poshmark.com/",
    "https://accounts.google.com/"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
